package hime;
import java.util.Scanner;

public class coffeeshophimzxc {
    
 /* if you declare a data type outside sa tanang 
  method, ma call siya sa tanang method
 then you must add static before declaring 
 */
 
 static Scanner s = new Scanner(System.in);
 
 /* for example, nag add kog static scanner para ma 
  * call ang scanner sa tanang methods
  */
 
 
  // global declaration 
  static String name;
  static int order =0;
  static int quantity = 1;
  // int price=0,//  // wanay gamit ning price //
  static int EsPrice=150, CapPrice = 50, LattPrice=25;
  static double total=0;
  static char choice;
  static int money;
  static String name2="";
  
 
 // start of main method
  public static void main(String[] args) {  
   // methods must be called in main to run 
  
  System.out.println("Enter your name:");
   order(); // calling order method
  
 } // end of main method
  
  public static void order(){ // start of order method
  
  name = s.nextLine(); // wala gi sud sa infinite loop
  
  while(true){
   
  System.out.println("WELCOME TO HIME'S COFFEE SHOP");
  System.out.println("");
  System.out.println("**********************************");
  System.out.println("———————————COFFEE MENU————————————");
  System.out.println("1. Espresso...................P150");
  System.out.println("2. Cappuccino.................P50");
  System.out.println("3. Latte......................P25");
  System.out.println("——————————————————————————————————");
  System.out.println("**********************************");
    
 System.out.println("Hi "+ name + " What would you like to order?");
     // if validation

 for (int i =0; i<1; i++) {
  
 if(s.hasNextInt()){ /* ug int daw imo i type mangayo siyag order */
    order = s.nextInt();
      
    if(order == 1){      
      System.out.println("You've selected Espresso.");
      System.out.println("");
      System.out.print("How many? ");
      quantity = s.nextInt();       
      total = total + quantity*EsPrice ;
      System.out.println("Total:" +total);  // add concatenation

      
      
      YesOrNo(); /*kada homan ug order tawgon niya 
                   ang YesOrNo nga method
                  */

    } // end of if order == 1 
     
     
      
   else if(order == 2){ // start of if validation     
      System.out.println("You've selected cappuccino.");
      System.out.println("");
      System.out.print("How many? ");
      quantity = s.nextInt();       
      total = total + quantity*CapPrice ;
      System.out.println("Total:" +total+"\n");   
      
      
      YesOrNo(); /* kada homan ug order tawgon niya 
                  ang YesOrNo nga method
                  */
 
     } // end of if order == 2
     
     
     
   else if(order == 3){ // start of if validation     
      System.out.println("You've selected latte.");
      System.out.println("");
      System.out.print("How many? ");
      quantity = s.nextInt();       
      total = total + quantity*LattPrice ;
      System.out.println("Total:" +total+"\n");  
      
      
      
      YesOrNo(); /* kada homan ug order tawgon niya 
                    ang YesOrNo nga method 
                    ang YesOrNo nga method kay naas ubos 
                    scroll lang
                 */
      
      
     } // end of if order == 3
        
     
    else{ // kung ang gi input nga number kay wala sa list
      System.out.println("Not in the choices!");
      i--;
     }
  } // end of if validation
   
 else{ // validation else
     System.out.println("invalid input! "); /* pero if letter imo i butang sa order
      mu run ni siya */ 
      System.out.println(" What would you like to order?");
      i--; // to decrement the variable i if the user enters an invalid
      s.next(); 
  }
    
  } // end of for loop 
    
  } // end of while loop
 } // end of  order method


 // Mag create kog laing method HAHA

 public static void YesOrNo() { // YesOrNo method
    
    System.out.println("Order again? ");
    choice = s.next().charAt(0);
  
    if(choice=='y'){ 
     order(); /* if mo yes daw siya, iyang tawgon balik ang 
                 order method so mu balik siyas order method
                 mu balik siyag pamilig kape
              */
    }
    else if (choice == 'n'){ 
    /* if mo NO siya, 
    * mu dritso siya sa billing or mu bayad. 
    * so meaning ana mag create nasad kag laing method 
    * for billing
    */
    bayad(); // tawgon niyang bayad nga method if mo NO na siya
             // naa sa ubos scrol lang
    
    }
  
   
 } // end of YesOrNo method 
 
 // himo napud laing method para sa bayad
 public static void bayad(){ 
  
  System.out.println("Total bill: "+total); /* tawgon ang total 
                                   variable */
  
for(int m = 0; m<1; m++){ // for loop for money
   
  System.out.print("Enter money: P"); // mangayo sa kwarta
  money = s.nextInt(); // nag global declare ko ug int money sa taas
  // ari i butang ang if else for insufficient money
  if(money<total){
   System.out.println("Insufficient Mana");
   m--; // mu decrement and i if insufficient ang kwarta
  } 
  } // end of for loop 
  System.out.println("Your change = "+(money-total)+"\n");
  System.out.println("\n***** Thank you for buying !! *****\n");
  
  System.out.println("Enter your pangan:");
  name2 = s.nextLine();
  total =0; // reset ang total sa tanan napalit nig human resibo
  money= 0; // reset ag money to zero after mahuman ang risibo
  name="";
  order();
 
  
  
 }
 
      
}
